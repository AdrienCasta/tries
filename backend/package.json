{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "npm-run-all --parallel test:unit test:integration test:e2e",
    "test:sequential": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts"
  },
  "devDependencies": {
    "@amiceli/vitest-cucumber": "^5.2.1",
    "@types/bcryptjs": "^2.4.6",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "@types/node": "^24.6.2",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1"
  }
}
